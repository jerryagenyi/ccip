# Frontend Environment Variables
# Copy this to .env and modify for your environment

# Application Configuration
VITE_API_URL=http://localhost:8000/api
VITE_API_VERSION=v1
VITE_APP_NAME=CCIP
VITE_APP_ENV=local

# Test Configuration (for Playwright E2E tests)
# These are used by the test runner, not the Vite app
TEST_ENV=e2e
BASE_URL=https://ccip.jerryagenyi.xyz
API_URL=https://ccip-api.jerryagenyi.xyz/api/v1
CI=false

# Testing Timeouts (in milliseconds)
TEST_TIMEOUT=60000
ACTION_TIMEOUT=15000
NAVIGATION_TIMEOUT=30000

# Browser Configuration
HEADED=false
SLOWMO=0

# Reporting
REPORTER=html
REPORT_OUTPUT_DIR=test-results/html

# Video and Screenshots
VIDEO=retain-on-failure
SCREENSHOT=only-on-failure
TRACE=retain-on-failure

# Parallel Execution
WORKERS=undefined
FULLY_PARALLEL=true

# Retry Configuration
RETRIES=0
FORBID_ONLY=false

# Development Server (for local testing)
DEV_SERVER_URL=http://localhost:5173
DEV_SERVER_COMMAND=npm run dev
DEV_SERVER_TIMEOUT=120000
DEV_SERVER_REUSE=true
