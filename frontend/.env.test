# Test Environment Configuration
# Overrides for automated testing

# Use production URLs for E2E testing
BASE_URL=https://ccip.jerryagenyi.xyz
API_URL=https://ccip-api.jerryagenyi.xyz/api/v1

# Test-specific settings
NODE_ENV=test
TEST_ENV=e2e
CI=true

# Faster timeouts for CI
TEST_TIMEOUT=30000
ACTION_TIMEOUT=10000
NAVIGATION_TIMEOUT=15000

# Headless execution for CI
HEADED=false
SLOWMO=0

# Minimal reporting for CI
REPORTER=junit
REPORT_OUTPUT_DIR=test-results/junit

# Enable all artifacts for debugging failures
VIDEO=retain-on-failure
SCREENSHOT=only-on-failure
TRACE=retain-on-failure

# Optimized for CI
WORKERS=1
FULLY_PARALLEL=false
RETRIES=2
FORBID_ONLY=true