{
  "name": "ccip-frontend",
  "version": "1.0.0",
  "description": "CCIP Frontend - Vue 3 + Quasar",
  "type": "module",
  "scripts": {
    "dev": "quasar dev --host",
    "build": "quasar build",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "lint:check": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
    "format": "prettier --write \"src/**/*.{js,ts,vue,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,vue,json,css,scss,md}\"",
    "test": "vitest",
    "test:unit": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:codegen": "playwright codegen",
    "test:e2e:prod": "cross-env BASE_URL=https://ccip.jerryagenyi.xyz API_URL=https://ccip-api.jerryagenyi.xyz/api/v1 playwright test tests/e2e/auth-production.spec.ts",
    "test:e2e:prod:headed": "cross-env BASE_URL=https://ccip.jerryagenyi.xyz API_URL=https://ccip-api.jerryagenyi.xyz/api/v1 playwright test tests/e2e/auth-production.spec.ts --headed",
    "test:ci": "cross-env NODE_ENV=test playwright test",
    "test:ci:prod": "cross-env NODE_ENV=test BASE_URL=https://ccip.jerryagenyi.xyz API_URL=https://ccip-api.jerryagenyi.xyz/api/v1 playwright test --reporter=junit",
    "playwright:install": "playwright install",
    "playwright:install:deps": "playwright install-deps",
    "playwright:report": "playwright show-report",
    "playwright:codegen": "playwright codegen https://ccip.jerryagenyi.xyz"
  },
  "dependencies": {
    "@quasar/extras": "^1.16.9",
    "axios": "^1.6.7",
    "pinia": "^2.1.7",
    "quasar": "^2.14.2",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.0",
    "@playwright/test": "^1.45.0",
    "@quasar/app-vite": "^2.0.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/test-utils": "^2.4.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.21.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.23.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.5",
    "typescript": "^5.9.3",
    "vite": "^5.4.0",
    "vitest": "^1.6.0"
  }
}
