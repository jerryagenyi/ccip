# ===========================================
# Production Environment Variables
# ===========================================
# Copy these values to Dokploy production environment variables
# Generate values where shown with commands below

# ===========================================
# DOCKER BUILD CONFIGURATION
# ===========================================
BACKEND_DOCKERFILE=Dockerfile.prod
FRONTEND_DOCKERFILE=Dockerfile.prod

# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_NAME=CCIP
APP_ENV=production
APP_DEBUG=false
APP_URL=https://ccip-api.jerryagenyi.xyz
# Generate with: php artisan key:generate
APP_KEY=GENERATE_WITH_PHP_ARTISAN_KEY_GENERATE

# ===========================================
# DATABASE (PostgreSQL)
# ===========================================
DB_DATABASE=ccip_production
DB_USERNAME=ccip_user
DB_PASSWORD=STRONG_PASSWORD_HERE

# ===========================================
# CACHE/QUEUE (Redis)
# ===========================================
REDIS_PASSWORD=STRONG_PASSWORD_HERE

# ===========================================
# STORAGE (MinIO S3-compatible)
# ===========================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=STRONG_PASSWORD_HERE
MINIO_CONSOLE_URL=https://ccip-minio.jerryagenyi.xyz

AWS_ACCESS_KEY_ID=MINIO_ACCESS_KEY_HERE
AWS_SECRET_ACCESS_KEY=MINIO_SECRET_KEY_HERE
AWS_BUCKET=ccip-storage

# ===========================================
# FRONTEND (Vue 3 + Quasar)
# ===========================================
VITE_API_URL=https://ccip-api.jerryagenyi.xyz/api
VITE_APP_URL=https://ccip.jerryagenyi.xyz

# ===========================================
# SECURITY
# ===========================================
SANCTUM_STATEFUL_DOMAINS=ccip-api.jerryagenyi.xyz,ccip.jerryagenyi.xyz
SESSION_DOMAIN=jerryagenyi.xyz
# Generate with: openssl rand -base64 32
JWT_SECRET=GENERATE_WITH_OPENSSL_RAND_BASE64_32
